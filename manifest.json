{
	"manifest_version": 2,
	"name": "Facebook Admin Tool",
	"version": "1.0",

	"description": "Facebook Admin Tool",

	"icons": {
		"16": "icons/icon-16.png",
		"32": "icons/icon-32.png",
		"64": "icons/icon-64.png"
	},

	"background": {
		"scripts": [
			"/background/misc.js",
			"/background/extractor.js",
			"/background/deleter.js"
		]
	},

	"browser_action": {
		"browser_style": true,
		"default_icon": {
			"16": "icons/icon-16.png",
			"32": "icons/icon-32.png",
			"64": "icons/icon-64.png"
		}
	},

	"permissions": [
		"https://www.facebook.com/groups/*/forsaleposts/*",
		"https://www.facebook.com/groups/*/permalink/*"
	]
}
